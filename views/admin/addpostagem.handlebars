{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h4>Nova Postagem: </h4>
<div class="card">
  <div class="card-body">
    <form action="/admin/postagens/nova" method="post">
      <label for="titulo">Titulo: </label><br>
      <input type="text" name="titulo" id="titulo" class="form-control"><br>
      <label for="slug">Slug: </label><br>
      <input type="text" name="slug" id="slug" class="form-control"><br>
      <label for="descricao">Descrição: </label><br>
      <input type="text" name="descricao" id="descricao" class="form-control"><br>
      <label for="conteudo">Conteúdo: </label><br>
      <textarea name="conteudo" id="conteudo" class="form-control"></textarea><br>
      <label for="categoria">Categoria:</label><br>
      <select class="custom-select" name="categoria" id="categoria">
        {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0">-- Selecione --</option>
        {{/each}}
      </select><br><br>
      <button type="submit" name="button" class="btn btn-primary">Criar Postagem</button>
    </form>
  </div>
</div>
<br>
