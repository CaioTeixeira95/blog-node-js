{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar Categoria: </h3>
<div class="card">
  <div class="card-body">
    <form class="" action="/admin/categorias/edit" method="post">
      <input type="hidden" name="id" value="{{categoria._id}}">
      <label for="nome">Nome: </label><br>
      <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control" value="{{categoria.nome}}"><br><br>
      <label for="slug">Slug: </label><br>
      <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control" value="{{categoria.slug}}"><br><br>
      <button type="submit" name="button" class="btn btn-primary">Editar Categoria</button>
    </form>
  </div>
</div>
